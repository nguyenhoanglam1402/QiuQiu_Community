<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="60dp">
        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_gravity="center"
            android:src="@drawable/qiuqiulogo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Qiu Qiu Registry"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Keep connect with other people"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/emailTextBox"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:hint="Your email"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/roundedtexteditor"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/passwordTextBox"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/roundedtexteditor"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/rewritePasswordTextBox"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:hint="Rewrite password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/roundedtexteditor"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/fullNameTextBox"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:hint="Fullname"
                android:drawableLeft="@drawable/pass__1_"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/roundedtexteditor"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/phoneNumberTxb"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:hint="Phone number"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/phone1"
                android:background="@drawable/roundedtexteditor"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/addressTxb"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:hint="Your address"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/pin1"
                android:background="@drawable/roundedtexteditor"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/signUpButton"
                android:layout_width="350dp"
                android:text="SIGN UP"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/roundedbutton"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>